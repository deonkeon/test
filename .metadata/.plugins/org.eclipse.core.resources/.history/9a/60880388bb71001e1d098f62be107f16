package chap99_homework;

public class CheckStr2 {

	public static void main(String[] args) {
		char[] ch = { 'b', 'c', 's', 'i', 'i', 'o', 'q', 'n', 't', 'm', 'l', 't' };

		for (int i = 0; i < ch.length - 2; i++) {
			char firstChar = ch[i];
			char secondChar = ch[i + 1];
			char thirdChar = ch[i + 2];
			System.out.println(i);

			String word = Character.toString(firstChar) + Character.toString(secondChar)
					+ Character.toString(thirdChar);

			if (word.equals("bit") || word.equals("com") || word.equals("sql") || word.equals("int")) {
				System.out.println(word);
			}
		}
	}
}