package chap99_homework;

public class CheckStr2 {

	public static void main(String[] args) {
		String[] arr = { "b", "c", "s", "i", "i", "o", "q", "n", "t", "m", "l", "t" };

		String word = "";

		for (int i = 0; i < arr.length; i++) {
			word += arr[i];

			if (i == 3 || i == 7 || i == 11) {
				System.out.println(word);
				word = "";
			}
		}
	}
}
